<h1>Welcome</h1>
Check out our latest products!
<table class="table">
  <tr>
    <th>Product</th>
    <th>Info</th>
    <th>Price</th>


  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, product %> by <%= product.brand %></td>
    <td><%= product.info %></td>
    <td>$<%= number_with_precision product.price, :precision => 2 %></td>
    

  </tr>
<% end %>
</table>

<br />


